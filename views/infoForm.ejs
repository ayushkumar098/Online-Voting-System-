
<%- include('partials/header', {title:'Register'}) %>
<script defer src="face-api.min.js"></script>
<section class="h-screen homeSection flex flex-col">

    <div class="container w-fit px-16 py-12 bg-slate-200 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 LoginForm rounded-md">
        <h1 class="text-center text-3xl font-bold mb-8 border-b-2 border-black">ADDITIONAL INFORMATION</h1>
        <form action="/register/form" method="post" class="flex flex-col" id="infoForm">

            <label for="name" class="text-lg">Name</label>
            <input type="name" name="name" id="name" class="mb-3 py-1 rounded-sm">

            <label for="voterId" class="text-lg">Voter ID</label>
            <input type="text" name="voterId" id="voterId" class="mb-3 py-1 rounded-sm">

            <label for="constituencyId" class="text-lg">constituency ID </label>
            <input type="text" name="constituencyId" id="constituencyId" class="mb-3 py-1 rounded-sm">

            <label for="passportNo" class="text-lg">Passport Number</label>
            <input type="text" name="passportNo" id="passportNo" class="mb-3 py-1 rounded-sm">

            <label for="country" class="text-lg">Country</label>
            <input type="text" name="country" id="country" class="mb-3 py-1 rounded-sm">

            <label for="mobileNo" class="text-lg">Mobile Number</label>
            <input type="text" name="mobileNo" id="mobileNo" class="mb-3 py-1 rounded-sm">

            <label >Upload your Image</label>
            
            <button type="button" class="rounded-md shadow-md px-4 py-2 bg-purple-200 hover:bg-purple-400 transition-all" data-modal-target="#modal">Open Webcam</button>
            <p id="loaded" class="text-base text-center"></p>
            <button type="submit" class="rounded-md border-2 border-slate-400 hover:text-white hover:bg-sky-400 hover:scale-105 px-4 py-2 transition-all">Submit</button>
        </form>
        <%- include('modal') %> 
        <div id="wrap-animation">
            <div class="ring hidden" >
                Loading
                <span class="ring-span hidden"></span>
            </div> 
        </div>
        
    </div>
<section/>

<script src="scripts/modalScript.js"></script>
<script src="scripts/getDescriptors.js"></script>
<%- include('partials/footer.ejs') %>  